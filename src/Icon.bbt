DEF PROCset_icon_selected(!q%,q%!4,selected%)
LOCAL eor%,clear%
IF selected% THEN clear%+=(1<<21) : eor%+=(1<<21) ELSE clear%+=(1<<21) : eor%+=(0<<21)
q%!8=eor%
q%!12=clear%
SYS "Wimp_SetIconState",,q%
ENDPROC
