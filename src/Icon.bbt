DEF PROCset_icon_shaded(!q%,q%!4,shaded%)
LOCAL eor%,clear%
IF shaded% THEN clear%+=(1<<22) : eor%+=(1<<22) ELSE clear%+=(1<<22) : eor%+=(0<<22)
q%!8=eor%
q%!12=clear%
SYS "Wimp_SetIconState",,q%
ENDPROC
