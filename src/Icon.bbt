DEF PROCset_icon_deleted(!q%,q%!4,deleted%)
LOCAL eor%,clear%
IF deleted% THEN clear%+=(1<<23) : eor%+=(1<<23) ELSE clear%+=(1<<23) : eor%+=(0<<23)
q%!8=eor%
q%!12=clear%
SYS "Wimp_SetIconState",,q%
ENDPROC
